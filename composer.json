{
    "name": "iamgerwin/filament-page-manager",
    "description": "A comprehensive page management system for Filament v4 with templates, regions, SEO, and multilingual support",
    "keywords": [
        "iamgerwin",
        "laravel",
        "filament",
        "page-manager",
        "cms",
        "seo",
        "multilingual",
        "template"
    ],
    "homepage": "https://github.com/iamgerwin/filament-page-manager",
    "license": "MIT",
    "authors": [
        {
            "name": "iamgerwin",
            "email": "iamgerwin@live.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.3",
        "filament/filament": "^4.0",
        "filament/forms": "^4.0",
        "filament/tables": "^4.0",
        "filament/notifications": "^4.0",
        "filament/actions": "^4.0",
        "filament/infolists": "^4.0",
        "filament/widgets": "^4.0",
        "spatie/laravel-package-tools": "^1.16",
        "spatie/laravel-sluggable": "^3.6",
        "spatie/laravel-translatable": "^6.6",
        "illuminate/contracts": "^11.0||^12.0"
    },
    "require-dev": {
        "laravel/pint": "^1.14",
        "nunomaduro/collision": "^8.8",
        "larastan/larastan": "^3.0",
        "orchestra/testbench": "^10.0.0||^9.0.0",
        "pestphp/pest": "^4.0",
        "pestphp/pest-plugin-arch": "^4.0",
        "pestphp/pest-plugin-laravel": "^4.0",
        "phpstan/extension-installer": "^1.4",
        "phpstan/phpstan-deprecation-rules": "^2.0",
        "phpstan/phpstan-phpunit": "^2.0",
        "spatie/laravel-ray": "^1.35"
    },
    "autoload": {
        "psr-4": {
            "IamGerwin\\FilamentPageManager\\": "src/",
            "IamGerwin\\FilamentPageManager\\Database\\Factories\\": "database/factories/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "IamGerwin\\FilamentPageManager\\Tests\\": "tests/",
            "Workbench\\App\\": "workbench/app/"
        }
    },
    "scripts": {
        "post-autoload-dump": "@composer run prepare",
        "prepare": "@php vendor/bin/testbench package:discover --ansi",
        "analyse": "vendor/bin/phpstan analyse",
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/pint"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "IamGerwin\\FilamentPageManager\\FilamentPageManagerServiceProvider"
            ],
            "aliases": {
                "FilamentPageManager": "IamGerwin\\FilamentPageManager\\Facades\\FilamentPageManager"
            }
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
